@model IEnumerable<LibraryManegement.Models.BookBorrowOnLoan>


<div class="container">

    <div>
        <h2 class="float-left">Chi tiết phiếu mượn</h2>
        <a class="btn btn-outline-primary float-right" href="@Url.Action("Create", "BookBorrowOnLoans")" role="button">Thêm</a>
    </div>

    <table class=" table table-hover">

        <thead>
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.Book.Book_title)*@
                    @Html.DisplayName("Tên sách")
                </th>
                <th>
                    Độc giả
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Fine_paid)*@
                    @Html.DisplayName("Tiền phạt")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Lost)*@
                    @Html.DisplayName("Mất")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Overdue)*@
                    @Html.DisplayName("Quá hạn")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Date_issued)*@
                    @Html.DisplayName("Ngày mượn")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Date_due_to_return)*@
                    @Html.DisplayName("Hạn trả (ngày)")
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.Date_returned)*@
                    @Html.DisplayName("Ngày trả")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Book_title)
                </td>
                <td>
                    @item.Pupils.Pupils_first_name @item.Pupils.Pupils_middle_name @item.Pupils.Pupils_last_name
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fine_paid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Overdue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_issued)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_due_to_return)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_returned)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>