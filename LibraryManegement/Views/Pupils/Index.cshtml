@model IEnumerable<LibraryManegement.Models.Pupils>

<div class="container">

    <div>
        <h2 class="float-left">Độc giả</h2>
        <a class="btn btn-outline-primary float-right" href="@Url.Action("Create", "Pupils")" role="button">Thêm</a>
    </div>

    <table class=" table table-hover">

        <thead>
            <tr>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Pupils_first_name)*@
                    @Html.DisplayName("Họ")
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Pupils_middle_name)*@
                    @Html.DisplayName("Tên đệm")
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Pupils_last_name)*@
                    @Html.DisplayName("Tên")
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Gender)*@
                    @Html.DisplayName("Giới tính")
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Address)*@
                    @Html.DisplayName("Địa chỉ")
                </th>
                <th scope="col">
                    @*@Html.DisplayNameFor(model => model.Phone_number)*@
                    @Html.DisplayName("Số điện thoại")
                </th>
                <th scope="col">
                    @* @Html.DisplayNameFor(model => model.Email)*@
                    @Html.DisplayName("Email")
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pupils_first_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pupils_middle_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pupils_last_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>

